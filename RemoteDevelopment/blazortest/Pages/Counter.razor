@page "/counter"

<h1>Counter</h1>

<p>Current count: @currentCount</p>
<p>Current count: <span>0</span></p>

<button class="btn btn-primary" @onclick="IncrementCount">CountUP BY BLAZOR</button>
<button class="btn btn-primary" id="countUpButton">Count Up By JAVASCRIPT</button>


@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
